{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedParameters": true,
    },
    "include": ["src/**/*", "src/drizzle.config.ts"],
    "exclude": ["node_modules"]
}